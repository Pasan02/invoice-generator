---
// InvoiceForm component - Form for creating an invoice
---

<div class="mb-10">
  <form id="invoice-form" class="space-y-8">
    <!-- Tabs navigation -->
    <div class="border-b border-gray-200 dark:border-gray-700">
      <nav class="flex -mb-px space-x-8 overflow-x-auto">
        <button type="button" data-tab="sender" class="tab-link active py-4 px-1 border-b-2 border-indigo-500 dark:border-indigo-400 font-medium text-indigo-600 dark:text-indigo-400">
          Sender Details
        </button>
        <button type="button" data-tab="client" class="tab-link py-4 px-1 border-b-2 border-transparent font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300">
          Client Details
        </button>
        <button type="button" data-tab="invoice" class="tab-link py-4 px-1 border-b-2 border-transparent font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300">
          Invoice Details
        </button>
        <button type="button" data-tab="items" class="tab-link py-4 px-1 border-b-2 border-transparent font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300">
          Line Items
        </button>
        <button type="button" data-tab="notes" class="tab-link py-4 px-1 border-b-2 border-transparent font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300">
          Notes & Terms
        </button>
        <button type="button" data-tab="payment" class="tab-link py-4 px-1 border-b-2 border-transparent font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300">
          Payment Details
        </button>
      </nav>
    </div>

    <!-- Tab panels -->
    <div class="tab-content">
      <!-- Sender Details Tab -->
      <div id="sender-tab" class="tab-pane active animate-fade-in">
        <div class="card">
          <div class="flex items-start justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Sender Information</h2>
            <div class="flex items-center">
              <label class="inline-flex items-center cursor-pointer">
                <span class="mr-3 text-sm font-medium text-gray-600 dark:text-gray-400">Save for later</span>
                <input type="checkbox" id="save-sender" class="sr-only peer">
                <div class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-500"></div>
              </label>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="sender-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name/Business Name*</label>
              <input type="text" id="sender-name" class="form-input block w-full p-2.5" placeholder="Your name or business" required>
            </div>
            
            <div>
              <label for="sender-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
              <input type="email" id="sender-email" class="form-input block w-full p-2.5" placeholder="your@email.com">
            </div>
            
            <div>
              <label for="sender-phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Phone</label>
              <input type="tel" id="sender-phone" class="form-input block w-full p-2.5" placeholder="Phone number">
            </div>
            
            <div class="md:col-span-2">
              <label for="sender-address" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Address</label>
              <textarea id="sender-address" rows="3" class="form-textarea block w-full p-2.5" placeholder="Street, City, State/Province, Postal Code, Country"></textarea>
            </div>
            
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Your Logo</label>
              <div class="flex items-center space-x-4">
                <div id="logo-preview-wrapper" class="hidden w-24 h-24 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-slate-700 flex items-center justify-center overflow-hidden">
                  <img id="logo-preview" class="max-h-full max-w-full" src="" alt="Logo preview">
                </div>
                <div>
                  <label for="logo-upload" class="btn-secondary flex items-center cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Choose logo
                  </label>
                  <input id="logo-upload" type="file" class="hidden" accept="image/*">
                  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">PNG, JPG or SVG. Max 1MB.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end mt-6">
          <button type="button" class="btn-primary next-tab" data-next="client">
            Next: Client Details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Client Details Tab -->
      <div id="client-tab" class="tab-pane hidden">
        <div class="card">
          <div class="flex items-start justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Client Information</h2>
            <div class="flex items-center">
              <label class="inline-flex items-center cursor-pointer">
                <span class="mr-3 text-sm font-medium text-gray-600 dark:text-gray-400">Save for later</span>
                <input type="checkbox" id="save-client" class="sr-only peer">
                <div class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-500"></div>
              </label>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="client-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Client Name/Business*</label>
              <input type="text" id="client-name" class="form-input block w-full p-2.5" placeholder="Client name or business" required>
            </div>
            
            <div>
              <label for="client-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
              <input type="email" id="client-email" class="form-input block w-full p-2.5" placeholder="client@example.com">
            </div>
            
            <div>
              <label for="client-phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Phone</label>
              <input type="tel" id="client-phone" class="form-input block w-full p-2.5" placeholder="Client phone number">
            </div>
            
            <div class="md:col-span-2">
              <label for="client-address" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Address</label>
              <textarea id="client-address" rows="3" class="form-textarea block w-full p-2.5" placeholder="Client street, city, state/province, postal code, country"></textarea>
            </div>
          </div>
        </div>
        
        <div class="flex justify-between mt-6">
          <button type="button" class="btn-secondary prev-tab" data-prev="sender">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414-1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Previous
          </button>
          <button type="button" class="btn-primary next-tab" data-next="invoice">
            Next: Invoice Details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Invoice Details Tab -->
      <div id="invoice-tab" class="tab-pane hidden">
        <div class="card">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Invoice Information</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label for="invoice-number" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Invoice #</label>
              <div class="flex">
                <input type="text" id="invoice-number" class="form-input block w-full rounded-r-none p-2.5" placeholder="INV-001">
                <button type="button" id="generate-invoice-number" class="btn-secondary rounded-l-none border-l-0 px-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </button>
              </div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Leave blank to auto-generate</p>
            </div>
            
            <div>
              <label for="invoice-date" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Date*</label>
              <input type="date" id="invoice-date" class="form-input block w-full p-2.5" required>
            </div>
            
            <div>
              <label for="due-date" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Due Date</label>
              <input type="date" id="due-date" class="form-input block w-full p-2.5">
            </div>
            
            <div>
              <label for="currency" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Currency</label>
              <select id="currency" class="form-select block w-full p-2.5">
                <option value="USD" selected>USD - US Dollar ($)</option>
                <option value="EUR">EUR - Euro (€)</option>
                <option value="GBP">GBP - British Pound (£)</option>
                <option value="CAD">CAD - Canadian Dollar (C$)</option>
                <option value="AUD">AUD - Australian Dollar (A$)</option>
                <option value="JPY">JPY - Japanese Yen (¥)</option>
                <option value="INR">INR - Indian Rupee (₹)</option>
                <option value="CNY">CNY - Chinese Yuan (¥)</option>
                <option value="BRL">BRL - Brazilian Real (R$)</option>
                <option value="ZAR">ZAR - South African Rand (R)</option>
              </select>
            </div>
            
            <div>
              <label for="tax-rate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Default Tax Rate (%)</label>
              <input type="number" id="tax-rate" class="form-input block w-full p-2.5" placeholder="0" min="0" max="100" step="0.01">
            </div>
            
            <div class="flex items-end">
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" id="tax-inclusive" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                <span class="ms-3 text-sm font-medium text-gray-700 dark:text-gray-300">Tax inclusive?</span>
              </label>
            </div>
          </div>
        </div>
        
        <div class="flex justify-between mt-6">
          <button type="button" class="btn-secondary prev-tab" data-prev="client">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414-1.414L7.414 9H15a1 1 0 110 2H7.414l2.293-2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Previous
          </button>
          <button type="button" class="btn-primary next-tab" data-next="items">
            Next: Line Items
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Line Items Tab -->
      <div id="items-tab" class="tab-pane hidden">
        <div class="card">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Invoice Items</h2>
          
          <div class="overflow-x-auto rounded-lg border border-gray-200 dark:border-gray-700 mb-4">
            <table class="modern-table w-full">
              <thead>
                <tr>
                  <th class="w-2/5">Description</th>
                  <th class="w-1/6 text-right">Quantity</th>
                  <th class="w-1/6 text-right">Rate</th>
                  <th class="w-1/6 text-right">Tax (%)</th>
                  <th class="w-1/6 text-right">Amount</th>
                  <th class="w-12"></th>
                </tr>
              </thead>
              <tbody id="items-table-body">
                <!-- Line items will be added here via JS -->
              </tbody>
            </table>
          </div>
          
          <div>
            <button type="button" id="add-item" class="btn-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Add Item
            </button>
          </div>
          
          <div class="mt-8 flex justify-end">
            <div class="w-full md:w-1/3">
              <div class="flex justify-between py-2 text-gray-600 dark:text-gray-400">
                <span>Subtotal:</span>
                <span id="subtotal-display">0.00</span>
              </div>
              <div class="flex justify-between py-2 text-gray-600 dark:text-gray-400">
                <span>Tax:</span>
                <span id="tax-display">0.00</span>
              </div>
              <div class="flex justify-between py-3 border-t border-gray-200 dark:border-gray-700 font-semibold text-lg">
                <span>Total:</span>
                <span id="total-display" class="text-indigo-600 dark:text-indigo-400">0.00</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-between mt-6">
          <button type="button" class="btn-secondary prev-tab" data-prev="invoice">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414-1.414L7.414 9H15a1 1 0 110 2H7.414l2.293-2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Previous
          </button>
          <button type="button" class="btn-primary next-tab" data-next="notes">
            Next: Notes & Terms
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Notes & Terms Tab -->
      <div id="notes-tab" class="tab-pane hidden">
        <div class="card">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Notes & Terms</h2>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <label for="notes" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Notes to Client</label>
              <textarea id="notes" rows="4" class="form-textarea block w-full p-2.5" placeholder="Add any notes or special instructions for your client..."></textarea>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">These notes will appear on the invoice.</p>
            </div>
            
            <div>
              <label for="terms" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Terms & Conditions</label>
              <textarea id="terms" rows="4" class="form-textarea block w-full p-2.5" placeholder="Add your payment terms, refund policy, etc..."></textarea>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Terms will appear at the bottom of the invoice.</p>
            </div>
          </div>
        </div>
        
        <div class="flex justify-between mt-6">
          <button type="button" class="btn-secondary prev-tab" data-prev="items">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414-1.414L7.414 9H15a1 1 0 110 2H7.414l2.293-2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Previous
          </button>
          <button type="button" class="btn-primary next-tab" data-next="payment">
            Next: Payment Details
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Payment Details Tab -->
      <div id="payment-tab" class="tab-pane hidden">
        <div class="card">
          <div class="flex items-start justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Payment Details</h2>
            <label class="inline-flex items-center cursor-pointer">
              <span class="mr-3 text-sm font-medium text-gray-600 dark:text-gray-400">Include in invoice</span>
              <input type="checkbox" id="include-payment" class="sr-only peer" checked>
              <div class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-500"></div>
            </label>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="bank-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Bank Name</label>
              <input type="text" id="bank-name" class="form-input block w-full p-2.5" placeholder="Bank name">
            </div>
            
            <div>
              <label for="account-holder" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account Holder</label>
              <input type="text" id="account-holder" class="form-input block w-full p-2.5" placeholder="Account holder name">
            </div>
            
            <div>
              <label for="account-number" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account Number</label>
              <input type="text" id="account-number" class="form-input block w-full p-2.5" placeholder="Account number">
            </div>
            
            <div>
              <label for="routing-number" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Routing/SWIFT/IBAN</label>
              <input type="text" id="routing-number" class="form-input block w-full p-2.5" placeholder="Routing or SWIFT number">
            </div>
          </div>
        </div>
        
        <!-- Final actions -->
        <div class="flex flex-col md:flex-row justify-between mt-8">
          <div class="flex space-x-2 mb-4 md:mb-0">
            <button type="button" id="save-draft" class="btn-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
              </svg>
              Save Draft
            </button>
            <button type="button" id="load-draft" class="btn-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              Load Draft
            </button>
